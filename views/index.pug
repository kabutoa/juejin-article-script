extends layout

block content
  ul
    each article in articles
      li.article-item
        p.article-item-like
          img.article-item-like--icon(src="data:image/png;base64,")
          span=`${article.item_info.article_info.digg_count}`
        p.article-item-title
          span=`title: ${article.item_info.article_info.title}`
          button.copy.copy-title(data-text=`${article.item_info.article_info.title}`) copy
        p.article-item-link
          span link: &nbsp;
          a(href=`juejin.cn/post/${article.item_info.article_id}` target='__blank')=`juejin.cn/post/${article.item_info.article_id}`
          button.copy.copy-link(data-text=`juejin.cn/post/${article.item_info.article_id}`) copy
    else
      li no data
